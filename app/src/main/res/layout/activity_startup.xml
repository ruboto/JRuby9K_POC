<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartupActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:text="Hello World!"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.413" />

    <Button
        android:id="@+id/ar_btn"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:text="ActiveRecord"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/autoload_btn"
        app:layout_constraintStart_toStartOf="@+id/autoload_btn" />

    <Button
        android:id="@+id/autoload_btn"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="Autoload"
        app:layout_constraintBottom_toTopOf="@+id/ar_btn"
        app:layout_constraintEnd_toEndOf="@+id/autoload_activity_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/autoload_activity_btn" />

    <Button
        android:id="@+id/autoload_activity_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:text="Autoload activity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <Button
        android:id="@+id/json_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="JSON"
        app:layout_constraintBottom_toBottomOf="@+id/autoload_btn"
        app:layout_constraintEnd_toEndOf="@+id/json_pure_btn"
        app:layout_constraintStart_toStartOf="@+id/json_pure_btn"
        app:layout_constraintTop_toTopOf="@+id/autoload_btn" />

    <Button
        android:id="@+id/json_pure_btn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:text="JSON Pure"
        app:layout_constraintBottom_toBottomOf="@+id/ar_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ar_btn" />

    <Button
        android:id="@+id/for_loop_btn"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:text="for loop"
        app:layout_constraintBottom_toBottomOf="@+id/autoload_activity_btn"
        app:layout_constraintEnd_toEndOf="@+id/json_pure_btn"
        app:layout_constraintStart_toStartOf="@+id/json_pure_btn"
        app:layout_constraintTop_toTopOf="@+id/autoload_activity_btn" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="359dp"
        android:layout_height="254dp"
        android:src="@drawable/icon"
        app:layout_constraintBottom_toTopOf="@+id/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>